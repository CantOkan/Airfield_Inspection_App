<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:background="@drawable/recyclerview_row">


            <TextView
                    android:text="TextView"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_mobile"/>

    <TextView
            android:text="date"
            android:layout_marginLeft="320dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/reddate"
            android:background="@drawable/textview_border"
            android:id="@+id/textView_date"/>


            <TextView
                    android:text="TextView"
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:background="@drawable/textview_border"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/textView_inspectionType"/>
            <TextView
                    android:text="TextView"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/textview_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:id="@+id/textView_facility"/>
            <TextView
                    android:text="TextView"
                    android:layout_marginLeft="300dp"
                    android:background="@drawable/textview_border"

                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"

                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:id="@+id/textView_facilitycond"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/textview_border"

                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:id="@+id/textView_layers"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
            android:text="Show"
            android:onClick="addMarker"
            android:id="@+id/button_addmarker"
            android:textColor="@color/colorPrimary"
            android:background="@color/my_greem"
    android:layout_marginLeft="250dp"/>


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Delete"
            android:id="@+id/button_delete"
            android:textColor="@color/colorPrimary"
            android:background="@color/reddate"
            android:layout_marginLeft="320dp"/>

</RelativeLayout>