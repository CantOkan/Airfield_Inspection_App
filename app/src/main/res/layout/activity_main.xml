<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>
    <TextView
            android:text="Password:"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:id="@+id/textView_phone2"
            android:textColor="#C7170B"
            android:layout_marginTop="176dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_phone"
            android:hint="phone"
            android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_LoginIn"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginBottom="372dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="HEAS APP-139"
            android:layout_width="509dp"
            android:layout_height="87dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="132dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="40sp" android:textColor="#131F6B"
            />
    <TextView

            android:layout_width="591dp"
            android:layout_height="115dp"
            android:id="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="40sp" android:textColor="#131F6B"
            android:background="@drawable/xlogo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_password"
            android:hint="Password:" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_phone2" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Phone Number:"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:id="@+id/textView_phone"
            android:textColor="#C7170B"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_phone"/>
    <Button
            android:text="Sing Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_SignUp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/button_LoginIn"
            android:layout_marginEnd="52dp" android:layout_marginBottom="372dp"/>
    <Switch
            android:text="HatÄ±rla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_password"
            app:layout_constraintEnd_toStartOf="@+id/button_SignUp" android:layout_marginEnd="160dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>